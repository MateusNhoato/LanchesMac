@model Lanche

<div class="container">
    <div class="row">
        <div class="card" style="width: 18rem;">
        <img src="@Model.ImagemUrl" class="card-img-top" alt="...">
            <div class="card-body">
                 <h5 class="card-title">@Model.Nome</h5>
                 <p class="card-text">@Model.DescricaoDetalhada</p>
                 <p class="btn btn-group align-content-lg-end">
                    <a asp-controller="Lanche" asp-action="List" class="btn btn-outline-info">Ver todos os Lanches</a>
                    <a class="btn btn-primary" id="cartButton" asp-controller="CarrinhoCompra" 
                    asp-action="AdicionarItemNoCarrinhoCompra" asp-route-lancheid="@Model.LancheId">
                    Adicionar @Model.Nome no carrinho</a>
                </p>
            </div>
        </div>
    </div>
</div>



